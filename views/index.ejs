<!DOCTYPE html>
<html>
  <head>
    <title>Test</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div id="wrap">
      <div class="registerArea">
        <div class="imgArea">
          <div class="imgTest">
            <img src="" id="previewImg" />
          </div>

          <input class="fileInput" type="file" name="imgFile"  />

        </div>


        <div class="formArea">
          <label>Name</label>
          <input type="text" maxlength="10" class="nameInput" name="nameText" />
          <label>Tag</label>
          <input type="text" class="tagInput" name="tagText" />
          <input type="button" value="등록" id="submitBtn" />
        </div>


      </div>


      <div class="detailArea">

        <ul class="nameListArea">

          <%
            var err = err;
            if(!err) {
            for(let i = 0; i < users.length; i++) { %>
            <li class="userName" id="<%= users[i]._id %>">
               <%= users[i].name %>
            </li>
            <% } %>
            <li id="addName" >
                 더 보기
            </li>
          <% }else{ %>
                등록 되지 않았습니다.
          <% } %>
        </ul>


        <div class="userDetail">
            <input type="hidden" id="userId" value="<%= user._id %>"/>
            <div class="userDetailImg">
              <img src="<%= user.img %>" />
            </div>
            <p class="userDetailName"><%= user.name %></p>
            <div class="userDetailTag">
              <ul class="tagArea">
                  <% for(let i = 0; i < user.tag.length; i++) { %>
                  <li class="tag">
                    <%= user.tag[i] %>
                  </li>
                  <% } %>
              </ul>
            </div>
            <input type="button" value="삭제" class="deleteBtn" />



        </div>

      </div>
    </div>



    <script src="https://code.jquery.com/jquery-3.2.1.min.js"  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    <script src="/javascripts/config.js"></script>
    <script src="/javascripts/utility.js"></script>
    <script src="/javascripts/index.js"></script>



  </body>
</html>
